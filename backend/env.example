### === Core ===
ENV=development
APP_HOST=0.0.0.0
APP_PORT=8000
APP_LOG_LEVEL=INFO
SECRET_KEY=change_me

### === Gemini AI Configuration ===
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-pro
DEFAULT_TEMPERATURE=0.8

### === Cost Control ===
DAILY_COST_LIMIT=1.00
MONTHLY_COST_LIMIT=10.00

### === Output Configuration ===
OUTPUT_BASE=src/outputs

### === CORS / Security ===
CORS_ALLOWED_ORIGINS=https://yourapp.com,https://www.yourapp.com,http://localhost:5173,http://localhost:3000
ENABLE_RATE_LIMITING=true
RATE_LIMIT_DEFAULT=100/minute

### === Postgres ===
DATABASE_URL=postgresql+psycopg://postgres:postgres@localhost:5432/ai_descriptions

### === Firebase ===
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_SERVICE_ACCOUNT_BASE64=your_base64_encoded_service_account_json
# Optional alternative keys
FIREBASE_CLIENT_EMAIL=
FIREBASE_PRIVATE_KEY_BASE64=

### === Lemon Squeezy ===
LEMON_SQUEEZY_API_KEY=your_lemon_squeezy_api_key
LEMON_SQUEEZY_WEBHOOK_SECRET=your_webhook_secret
LEMON_SQUEEZY_STORE_ID=your_store_id
LEMON_SQUEEZY_MONTHLY_VARIANT_ID=
LEMON_SQUEEZY_YEARLY_VARIANT_ID=
LEMON_SQUEEZY_TEST_MODE=true

### === Observability (optional) ===
SENTRY_DSN=

### Legacy/advanced DB settings (optional)
DB_TYPE=postgresql
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ai_descriptions
DB_USER=postgres
DB_PASSWORD=your_password
DB_ECHO=false
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# SSL settings for production database
# DB_SSL_MODE=require
# DB_SSL_CERT=/path/to/client-cert.pem
# DB_SSL_KEY=/path/to/client-key.pem
# DB_SSL_ROOT_CERT=/path/to/ca-cert.pem

# Redis Configuration (Optional - for caching and rate limiting)
# REDIS_URL=redis://localhost:6379/0

### === Logging ===
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
